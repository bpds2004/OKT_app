generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum UserRole {
  UTENTE
  UNIDADE_SAUDE
}

enum TestStatus {
  PENDING
  IN_REVIEW
  DONE
}

enum RiskLevel {
  BAIXO
  MEDIO
  ALTO
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  passwordHash String
  role         UserRole
  name         String
  createdAt    DateTime       @default(now())

  patientProfile PatientProfile?
  unitProfile    UnitProfile?
  tests          Test[]        @relation("PatientTests")
  notifications  Notification[]
}

model HealthUnit {
  id        String       @id @default(cuid())
  name      String
  address   String
  code      String       @unique
  createdAt DateTime     @default(now())

  unitProfiles UnitProfile[]
  tests        Test[]
}

model PatientProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  phone        String?
  nif          String?
  birthDate    DateTime?
  address      String?
  healthNumber String?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model UnitProfile {
  id           String   @id @default(cuid())
  userId       String   @unique
  healthUnitId String
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id])
  healthUnit HealthUnit @relation(fields: [healthUnitId], references: [id])
}

model Test {
  id            String      @id @default(cuid())
  patientUserId String
  healthUnitId  String
  status        TestStatus  @default(PENDING)
  createdAt     DateTime    @default(now())

  patient   User       @relation("PatientTests", fields: [patientUserId], references: [id])
  healthUnit HealthUnit @relation(fields: [healthUnitId], references: [id])
  result    TestResult?
}

model TestResult {
  id         String     @id @default(cuid())
  testId     String     @unique
  summary    String
  riskLevel  RiskLevel
  createdAt  DateTime   @default(now())

  test       Test                @relation(fields: [testId], references: [id])
  variables  IdentifiedVariable[]
}

model IdentifiedVariable {
  id            String     @id @default(cuid())
  testResultId  String
  name          String
  significance  String
  recommendation String

  testResult TestResult @relation(fields: [testResultId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
